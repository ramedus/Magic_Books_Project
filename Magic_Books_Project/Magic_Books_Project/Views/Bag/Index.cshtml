@model Magic_Books_Project.Models.Bag
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Shop Cart Section Begin -->
<section class="shop-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @using (Html.BeginForm())
                                {
                                    foreach (var item in Model.Mysepet)
                                    {

                                        <td class="cart__product__item">


                                            <img src="img/shop-cart/cp-1.jpg" alt="">
                                            <div class="cart__product__item__title">
                                                <h6>@Html.DisplayFor(model => item.prdct.name, new { htmlAttributes = new { @class = "form-control" } })</h6>
                                            </div>

                                        </td>
                                        <td class="cart__price">@Html.DisplayFor(model => item.prdct.price, new { htmlAttributes = new { @class = "form-control" } })</td>
                                        <td class="cart__quantity">
                                            <div class="pro-qty">
                                                <input type="text" value="@Html.DisplayFor(model => item.quantity, new { htmlAttributes = new { @class = "form-control" } })">
                                            </div>
                                        </td>
                                        <td class="cart__total">@(item.prdct.price * item.quantity)</td>
                                        <td class="cart__close"><a href="@Url.Action("remove_product", new { product_id = item.prdct.product_id })">SİL</a></td>
                                    }
                                    <div class="col-lg-4 offset-lg-2">
                                        <div class="cart__total__procced">
                                            <h6>Cart total</h6>
                                            <ul>

                                                <li>Total <span>@Model.bag_total()</span></li>
                                            </ul>
                                            <a href="@Url.Action( "order_received","Orders")">BUY</a>
                                        </div>
                                    </div>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="cart__btn">
                    <a href="@Url.Action("Shop","Products")">Continue Shopping</a>
                </div>
            </div>
        </div>
       
           
        </div>
    </div>
</section>
<!-- Shop Cart Section End -->
