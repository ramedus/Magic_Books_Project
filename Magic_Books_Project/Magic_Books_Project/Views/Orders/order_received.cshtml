@model IEnumerable<Magic_Books_Project.Models.Orders>

@{
    ViewBag.Title = "order_received";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>order_received</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.order_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.order_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customers.first_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.name)
        </th>
        <th></th>
    </tr>

    @foreach (var order in Model)
    {
        <tr>
            <td>
                @order.order_id
            </td>
            <td>
                @order.order_date
            </td>
            <td>
                @order.quantity
            </td>
            <td>
                @order.user_id
            </td>
            <td>
                @order.Product.name
            </td>
            <td>
            </td>
        </tr>
    }

</table>
