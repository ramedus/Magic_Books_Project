@model IPagedList<Magic_Books_Project.Models.Product>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SAVE PRODUCT</h2>
<br />
<p>
    @Html.ActionLink("Create New", "product_save", null, new { @class = "btn btn-danger" })
</p>
<br />
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price
        </th>
        <th>
            Stock
        </th>
        <th>
            Image
        </th>
        <th>
            Description
        </th>
        <th>
            ISBN
        </th>
        <th>
            Total Pages
        </th>
        <th>
            Published Date
        </th>
        <th>
            Author
        </th>
        <th>
            Category
        </th>
        <th>
            Publisher
        </th>
        <th>
            Subcategory
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
               <img src="~/images/@item.image" 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_pages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.published_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Authors.author_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publishers.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subcategory.subcategory_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.product_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.product_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.product_id })
            </td>
        </tr>
    }
    <tr><td colspan="3">@Html.PagedListPager(Model, page => Url.Action("index", new { page }), PagedListRenderOptions.MinimalWithItemCountText)   </td></tr>

</table>
