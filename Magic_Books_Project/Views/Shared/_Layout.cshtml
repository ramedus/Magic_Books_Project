@using Magic_Books_Project.Models;

@{
    string name = "Guest";
    string surname = "";
    if (Session["members"] != null)
    {
        name = ((Customers)Session["members"]).first_name;
        surname = ((Customers)Session["members"]).last_name;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Magic Books">
    <meta name="keywords" content="Ashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Magic Books</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap"
          rel="stylesheet">

    
    <!-- Css Styles -->
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="css/style.css" type="text/css">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__close">+</div>
        <ul class="offcanvas__widget">
            <li><span class="icon_search search-switch"></span></li>
            <li>
                <a href="#">
                    <span class="icon_heart_alt"></span>
                    <div class="tip"></div>
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="icon_bag_alt"></span>
                    <div class="tip"></div>
                </a>
            </li>
        </ul>
        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__auth">

        </div>
    </div>
    <!-- Offcanvas Menu End -->
    <!-- Header Section Begin -->
    <header class="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-3 col-lg-2">
                    <div class="header__logo">
                        <a href="@Url.Action("Index","Home")"><img src="~/images/logo23.png" alt=""></a>

                    </div>
                </div>
                <div class="col-xl-6 col-lg-7">
                    <nav class="header__menu">
                        <ul>

                            <li>
                                <a href=""><h6>Fiction</h6></a>
                                @{Html.RenderAction("Fiction", "Home"); }
                            </li>
                            <li>
                                <a href=""><h6>Nonfiction</h6></a>
                                @{Html.RenderAction("Nonfiction", "Home"); }
                            </li>

                            <li>
                                <a href=""><h6>Kids</h6></a>
                                @{Html.RenderAction("Kids", "Home"); }
                            </li>

                            <li>
                                <a href="@Url.Action("Index","Products")"><h6>SHOP</h6></a>

                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__right">
                        <div class="header__right__auth">
                            @if (Session["members"] == null)
                            {
                                <a href="@Url.Action("Login", "Home")">Login</a>

                                <a href="@Url.Action("Sign_up","Home")">Sign Up</a>
                            }
                            else
                            {
                        <a href="#">Welcome @name @surname</a>
                        <ul class="dropdown">

                            <li> <a href="@Url.Action("my_orders", "Orders")">My Orders</a></li>
                            <li> <a href="@Url.Action("logout", "Home")">Log Out</a></li>
                        </ul>
                            }
                            </div>
                        <ul class="header__right__widget">
                            @if (Session["members"] == null)
                            {
                                <li>
                                    <a href="@Url.Action("Login", "Home")">
                                        <span class="icon_bag_alt"></span>

                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="@Url.Action("Index", "Bag")">
                                        <span class="icon_bag_alt"></span>

                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="canvas__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
</body>
@RenderBody()
</html>
