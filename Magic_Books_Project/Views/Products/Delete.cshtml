@model Magic_Books_Project.Models.Product

@{
    Layout = null;
}
@Styles.Render("~/Content/css")


<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Product Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Price
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>

        <dt>
            Stock
        </dt>

        <dd>
            @Html.DisplayFor(model => model.stock)
        </dd>

        <dt>
            Image
        </dt>

        <dd>
            @Html.DisplayFor(model => model.image)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            ISBN
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isbn)
        </dd>

        <dt>
            Total Pages
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total_pages)
        </dd>

        <dt>
            Published Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.published_date)
        </dd>

        <dt>
            Author
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Authors.author_name)
        </dd>

        <dt>
            Category
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categories.name)
        </dd>

        <dt>
            Publisher
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Publishers.name)
        </dd>

        <dt>
            Subcategory
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subcategory.subcategory_name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="site-btn" /> |
            @Html.ActionLink("Back to List", "product_edit_delete")
        </div>
    }
</div>
