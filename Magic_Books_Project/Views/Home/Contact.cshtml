<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__content">
                    <div class="contact__address">
                        <h5 style=" color: #111111; font-size: 20px; font-weight: 600; text-transform: uppercase; margin-bottom: 20px;">Contact info</h5>
                        <ul>
                            <li>
                                <h6 style="color: #111111; font-weight: 600; margin-bottom: 10px;"><i class="fa fa-map-marker"></i> Address</h6>
                                <p>160 Pennsylvania Ave NW, Washington, Castle, PA 16101-5161</p>
                            </li>
                            <li>
                                <h6 style="color: #111111; font-weight: 600; margin-bottom: 10px;"><i class="fa fa-phone"></i> Phone</h6>
                                <p><span>125-711-811</span><span>125-668-886</span></p>
                            </li>
                            <li>
                                <h6 style="color: #111111; font-weight: 600; margin-bottom: 10px;"><i class="fa fa-headphones"></i> Support</h6>
                                <p>Magic_Books@gmail.com</p>
                            </li>
                        </ul>
                    </div>
                    <br />
                    <div class="contact__form">
                        <h5 style=" color: #111111; font-size: 20px; font-weight: 600; text-transform: uppercase; margin-bottom: 35px;">SEND MESSAGE</h5>
                        <form action="#">
                            <input type="text" placeholder="Name" style=" height: 50px; width: 100%; padding-left: 20px; font-size: 14px; color: #444444; border: 1px solid #e1e1e1; border-radius: 10px; margin-bottom: 20px;">
                            <br />
                            <input type="text" placeholder="Email" style=" height: 50px; width: 100%; padding-left: 20px; font-size: 14px; color: #444444; border: 1px solid #e1e1e1; border-radius: 10px; margin-bottom: 20px;">
                            <br />
                            <input type="text" placeholder="Website" style=" height: 50px; width: 100%; padding-left: 20px; font-size: 14px; color: #444444; border: 1px solid #e1e1e1; border-radius: 10px; margin-bottom: 20px;">
                            <br />
                            <textarea placeholder="Message" style=" height: 50px; width: 100%; padding-left: 20px; font-size: 14px; color: #444444; border: 1px solid #e1e1e1; border-radius: 10px; margin-bottom: 20px;"></textarea>
                            <br />
                            <button type="submit" class="site-btn" style="font-size: 14px; color: #ffffff; background: #6F00FF; font-weight: 600; border: none; text-transform: uppercase; display: inline-block; padding: 12px 30px; border-radius: 50px; ">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48158.305462977965!2d-74.13283844036356!3d41.02757295168286!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c2e440473470d7%3A0xcaf503ca2ee57958!2sSaddle%20River%2C%20NJ%2007458%2C%20USA!5e0!3m2!1sen!2sbd!4v1575917275626!5m2!1sen!2sbd"
                            height="780" style="border:0" allowfullscreen="">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>
