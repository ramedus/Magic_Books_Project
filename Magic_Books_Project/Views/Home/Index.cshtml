<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4 style="font-size:27px; margin-left:-78px;">New books</h4>
                </div>
            </div>

        </div>
        <div class="row property__gallery" style="margin-left:50px;">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix women">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" style="background-image: url(../images/@item.image); width:206px;  height:330px; background-size:contain; margin:-3px;">
                            <div class="label new" style="margin-left: 1px;">New</div>
                            <ul class="product__hover">
                                <li><a href="@Url.Action("product_details", "Products", new { product_id = item.product_id })" class="image-popup"><span class="arrow_expand"></span></a></li>
                                <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                @if (Session["members"] == null)
                                {
                                    <li><a href="@Url.Action("Login", "Home")"><span class="icon_bag_alt"></span></a></li>
                                }
                                else
                                {
                                    <li><a href="@Url.Action("add_bag_cntrl", "Bag", new { product_id = item.product_id })"><span class="icon_bag_alt"></span></a></li>
                                }
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="#" style="font-size:17px; margin-left:-51px;">@Html.DisplayFor(modelItem => item.name)</a></h6>
                            <div class="product__price" style="font-size:16px; margin-left:-61px;">$@Html.DisplayFor(modelItem => item.price)</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>
<!-- Product Section End -->

